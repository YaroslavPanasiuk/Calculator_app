<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button_functional" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">?textFillColor</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMaxTextSize">@dimen/smaller_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/none</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>
    <style name="button_regular" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMaxTextSize">@dimen/small_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>
    <style name="button_operational" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">?colorAccent</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMaxTextSize">@dimen/medium_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>
    <style name="button_converter" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">?textColorSecondary</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMaxTextSize">@dimen/smallestest_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>
    <style name="textView_settings_group" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?colorAccent</item>
        <item name="android:textSize">@dimen/smallest_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="textView_setting" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/smaller_text_size</item>
    </style>
    <style name="textView_setting_summary" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?textColorSecondary</item>
        <item name="android:textSize">@dimen/smallestest_text_size</item>
    </style>
    <style name="PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">#FFF</item>
    </style>
    <style name="Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:backgroundTint">?textColorSecondary</item>
    </style>
</resources>