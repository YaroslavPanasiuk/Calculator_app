        <item name="colorPrimary">@color/almost_white</item>
        <item name="colorPrimaryDark">@color/secondary</item>
        <item name="textFillColor">@color/text_light</item>
        <item name="android:statusBarColor">#ddd</item>
        <item name="android:background">#ddd</item>
        <item name="android:colorAccent">@color/lightGrey</item>
        <item name="colorAccent">@color/lightGrey</item>
