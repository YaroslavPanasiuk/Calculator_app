    <style name="Theme.CalculatorDark" parent="android:Theme.Material.NoActionBar" >
        <item name="colorPrimary">@color/almost_black</item>
        <item name="colorPrimaryDark">@color/secondary</item>
        <item name="textFillColor">@color/text_dark</item>
        <item name="android:statusBarColor">#090909</item>
